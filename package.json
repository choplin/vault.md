{
  "name": "vault.md",
  "version": "0.1.0",
  "description": "Context-Aware Storage for AI-Driven Development - Store and version your context with a simple CLI",
  "keywords": [
    "context-engineering",
    "ai-development",
    "knowledge-management",
    "mcp",
    "cli",
    "vault",
    "markdown"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vault": "./dist/cli.js",
    "vault.md": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:web": "concurrently -n api,vite -c magenta,cyan \"npm run dev:api\" \"vite\"",
    "dev:api": "tsx src/cli.ts web",
    "build": "npm run build:web && npm run build:bundle && npm run build:types",
    "build:bundle": "esbuild src/cli.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/cli.js --external:better-sqlite3 --banner:js='#!/usr/bin/env node'",
    "build:types": "tsc --emitDeclarationOnly",
    "build:web": "vite build",
    "test": "vitest run && npm run test:e2e",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "cucumber-js",
    "test:e2e:watch": "cucumber-js --watch",
    "lint": "npm run lint:biome && npm run lint:md",
    "lint:biome": "biome check .",
    "lint:md": "markdownlint-cli2 '**/*.md' '#node_modules' '#.claude'",
    "format": "biome check . --write && markdownlint-cli2 --fix '**/*.md' '#node_modules' '#.claude'",
    "prepare": "lefthook install",
    "prepublishOnly": "npm run lint && npm run build",
    "check": "npm run format && npm run lint && npm run build && npm test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.16.0",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@types/marked": "^5.0.2",
    "@types/prismjs": "^1.26.5",
    "better-sqlite3": "^12.2.0",
    "commander": "^14.0.0",
    "console-table-printer": "^2.14.6",
    "hono": "^4.8.5",
    "lucide-solid": "^0.525.0",
    "marked": "^16.0.0",
    "prismjs": "^1.30.0",
    "solid-js": "^1.9.7",
    "vite-plugin-solid": "^2.11.8",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cucumber/cucumber": "^10.9.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chai": "^4.3.20",
    "@types/node": "^24.0.12",
    "@vitest/coverage-v8": "^3.2.4",
    "chai": "^4.5.0",
    "concurrently": "^9.2.0",
    "daisyui": "^5.0.46",
    "esbuild": "^0.25.6",
    "lefthook": "^1.12.1",
    "markdownlint-cli2": "^0.18.1",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "markdownlint-cli2": {
    "config": {
      "MD036": false,
      "MD013": false,
      "MD024": false
    }
  }
}
